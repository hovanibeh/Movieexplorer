<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MovieExplorer.Pages"
    Shell.FlyoutBehavior="Flyout">

    <!-- Menu items in the hamburger menu -->

    <FlyoutItem Title="Movies">
        <ShellContent ContentTemplate="{DataTemplate pages:MoviesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Favourites">
        <ShellContent ContentTemplate="{DataTemplate pages:FavouritesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="History">
        <ShellContent ContentTemplate="{DataTemplate pages:HistoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

</Shell>
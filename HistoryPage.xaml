<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.Pages.HistoryPage"
             Title="History">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="📜 Viewing History" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,10,0,10"/>

        <!-- History List -->
        <CollectionView x:Name="HistoryCollectionView" 
                        Grid.Row="1"
                        SelectionMode="None">

            <!-- Empty state message -->
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No viewing history yet!" 
                           FontSize="20" 
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="View movies to see them here" 
                           FontSize="14" 
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <!-- How each history item looks -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" Margin="5" StrokeThickness="1" Stroke="LightGray">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="60,*" RowDefinitions="Auto,Auto,Auto,Auto">

                            <!-- Emoji -->
                            <Label Grid.Column="0" Grid.RowSpan="4"
                                   Text="{Binding Emoji}" 
                                   FontSize="48"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>

                            <!-- Title -->
                            <Label Grid.Column="1" Grid.Row="0"
                                   Text="{Binding Title}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   Margin="10,0,0,0"/>

                            <!-- Year -->
                            <Label Grid.Column="1" Grid.Row="1"
                                   Text="{Binding Year}" 
                                   FontSize="14" 
                                   Margin="10,5,0,0"/>

                            <!-- Genres -->
                            <Label Grid.Column="1" Grid.Row="2"
                                   Text="{Binding GenresString}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   Margin="10,5,0,0"/>

                            <!-- When viewed -->
                            <Label Grid.Column="1" Grid.Row="3"
                                   FontSize="11" 
                                   TextColor="LightGray"
                                   Margin="10,5,0,0">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Viewed: "/>
                                        <Span Text="{Binding TimestampString}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
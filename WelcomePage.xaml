<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.Pages.WelcomePage"
             Title="Welcome">

    <!-- VerticalStackLayout = arranges items from top to bottom -->
    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <!-- App Title with emoji -->
        <Label Text="🎬 HOVAN'S Movie Explorer" 
               FontSize="40" 
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <!-- Welcome message -->
        <Label Text="Welcome! Please enter your name to continue." 
               FontSize="18" 
               HorizontalOptions="Center"
               Margin="0,20,0,20"/>

        <!-- Text box for name -->
        <Entry x:Name="NameEntry" 
               Placeholder="Enter your name"
               FontSize="20"
               HorizontalOptions="Fill"/>

        <!-- Continue button -->
        <Button Text="Continue" 
                Clicked="OnContinueClicked"
                FontSize="18"
                Padding="15"
                HorizontalOptions="Center"
                WidthRequest="200"/>

    </VerticalStackLayout>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.Pages.MovieDetailPage"
             Title="Movie Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

         
            <Label x:Name="EmojiLabel"
                   FontSize="100" 
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            
            <Label x:Name="TitleLabel"
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            
            <Label x:Name="YearLabel"
                   FontSize="18" 
                   HorizontalOptions="Center"
                   TextColor="Gray"/>

            
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="⭐ IMDB Rating:" FontSize="16" FontAttributes="Bold"/>
                <Label x:Name="RatingLabel" FontSize="16"/>
            </HorizontalStackLayout>

           
            <Border Padding="15" StrokeThickness="1" Stroke="LightGray" Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Director" FontSize="14" FontAttributes="Bold" TextColor="Gray"/>
                    <Label x:Name="DirectorLabel" FontSize="18"/>
                </VerticalStackLayout>
            </Border>

        
            <Border Padding="15" StrokeThickness="1" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Genres" FontSize="14" FontAttributes="Bold" TextColor="Gray"/>
                    <Label x:Name="GenresLabel" FontSize="18"/>
                </VerticalStackLayout>
            </Border>

            
            <Button x:Name="FavouriteButton"
                    Text="Add to Favourites ❤️" 
                    Clicked="OnAddToFavouritesClicked"
                    FontSize="18"
                    Padding="15"
                    Margin="0,20,0,0"/>

            
            <Button Text="Back to Movies" 
                    Clicked="OnBackClicked"
                    FontSize="16"
                    BackgroundColor="LightGray"
                    TextColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.Pages.MovieDetailPage"
             Title="Movie Details"
             BackgroundColor="#F5F5F5" >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Big animated emoji -->
            <Label x:Name="EmojiLabel"
                   FontSize="100" 
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   Text="🎬"/>

            <!-- Movie Title -->
            <Label x:Name="TitleLabel"
                   FontSize="28" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Text="Movie Title"/>

            <!-- Year -->
            <Label x:Name="YearLabel"
                   FontSize="18" 
                   HorizontalOptions="Center"
                   TextColor="BlueViolet"
                   Text="2024"/>

            <!-- Rating -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="⭐ IMDB Rating:" FontSize="16" FontAttributes="Bold"/>
                <Label x:Name="RatingLabel" FontSize="16" Text="8.5"/>
            </HorizontalStackLayout>

            <!-- Director -->
            <Border Padding="15" StrokeThickness="1" Stroke="LightGray" Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Director" FontSize="14" FontAttributes="Bold" TextColor="Gray"/>
                    <Label x:Name="DirectorLabel" FontSize="18" Text="Director Name"/>
                </VerticalStackLayout>
            </Border>

            <!-- Genres -->
            <Border Padding="15" StrokeThickness="1" Stroke="LightGray">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5">
                    <Label Text="Genres" FontSize="14" FontAttributes="Bold" TextColor="Gray"/>
                    <Label x:Name="GenresLabel" FontSize="18" Text="Action, Drama"/>
                </VerticalStackLayout>
            </Border>

            <!-- ADD TO FAVOURITES BUTTON - THIS WAS MISSING! -->
            <Button x:Name="FavouriteButton"
                    Text="Add to Favourites ❤️" 
                    Clicked="OnAddToFavouritesClicked"
                    FontSize="18"
                    Padding="15"
                    Margin="0,20,0,0"
                    BackgroundColor="#512BD4"
                    TextColor="brown"/>

            <!-- Back Button -->
            <Button Text="Back to Movies" 
                    Clicked="OnBackClicked"
                    FontSize="16"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    Padding="15"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>